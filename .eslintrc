{
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"browser": true,
		"jasmine": true,
		"es6": true
	},

	"ecmaFeatures": {
		"arrowFunctions": true,
		"binaryLiterals": true,
		"blockBindings": true,
		"classes": true,
		"defaultParams": true,
		"destructuring": true,
		"forOf": true,
		"generators": false,
		"modules": true,
		"objectLiteralComputedProperties": true,
		"objectLiteralDuplicateProperties": true,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true,
		"octalLiterals": true,
		"regexUFlag": false,
		"regexYFlag": false,
		"spread": true,
		"superInFunctions": true,
		"templateStrings": true,
		"unicodeCodePointEscapes": true,
		"globalReturn": false,
		"jsx": true
	},

	"rules": {
		"indent": [2, "tab"],
		"no-console": 0,
		"no-var": 1,
		"quotes": "single",
		"strict": "never"
	}
}
